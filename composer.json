{
    "name": "robypz/laravel-mongo-roles",
    "description": "Simple roles and permission for Laravel using MongoDB.",
    "type": "library",
    "require": {
        "illuminate/support": "^12.0",
        "illuminate/database": "^12.0",
        "illuminate/auth": "^12.0",
        "mongodb/laravel-mongodb": "^5.2"
    },
    "require-dev": {
        "pestphp/pest": "^3.8",
        "orchestra/testbench": "^10.4"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "RobYpz\\MongoRole\\": "src/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "authors": [
        {
            "name": "Robert Yepez",
            "email": "robertyepez0208@hotmail.com"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "version": "dev-main",
    "extra": {
        "laravel": {
            "providers": [
                "RobYpz\\MongoRole\\Providers\\MongoRoleServiceProvider"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "test": [
            "@clear",
            "@php vendor/bin/pest"
        ]
    }
}